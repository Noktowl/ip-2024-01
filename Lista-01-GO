// Exercicio 01

package main 
import "fmt"

func main(){
    
    var (x, y, z float64)
    
    fmt.Println("Informe as 3 notas: ")
    fmt.Scan(&x, &y, &z)
    
    fmt.Printf("MEDIA = %.2f \n", (z+x+y)/3)
    
    if (z+x+y)/3 < 6{
        fmt.Print("REPROVADO")
    }else{
        fmt.Print("APROVADO")
    }
}


