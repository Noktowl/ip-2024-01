//Exercicio 15

package main

import "fmt"

func main() {
	var N int
	fmt.Scanln(&N)

	for i := 2; i <= N; i += 2 {
		quadrado := i * i
		fmt.Printf("%dˆ2 = %d\n", i, quadrado)
	}
}


