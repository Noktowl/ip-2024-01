//Exercicio 10

package main

import "fmt"

func main() {
	var a, b, c, d float64
	fmt.Scanln(&a)
	fmt.Scanln(&b)
	fmt.Scanln(&c)
	fmt.Scanln(&d)

	determinante := a*d - b*c
	fmt.Printf("O VALOR DO DETERMINANTE E = %.2f\n", determinante)
}


