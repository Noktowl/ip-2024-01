//Exercicio 09

package main

import "fmt"

func main() {
	var A, B, C float64
	fmt.Scanln(&A)
	fmt.Scanln(&B)
	fmt.Scanln(&C)

	delta := B*B - 4*A*C
	fmt.Printf("O VALOR DE DELTA E = %.2f\n", delta)
}


