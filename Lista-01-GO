//Exercicio 06

package main

import "fmt"

func main() {
    var n int
    fmt.Scanln(&n)

    for i := 0; i < n; i++ {
        var fahrenheit float64
        fmt.Scanln(&fahrenheit)
        celsius := (5 * (fahrenheit - 32)) / 9
        fmt.Printf("%.2f FAHRENHEIT EQUIVALE A %.2f CELSIUS\n", fahrenheit, celsius)
    }
}


