//Exercicio 13

package main

import "fmt"

func main() {
	var nota float64
	fmt.Scanln(&nota)

	conceito := converterConceito(nota)
	fmt.Printf("NOTA = %.1f CONCEITO = %s\n", nota, conceito)
}

func converterConceito(nota float64) string {
	if nota >= 9.0 && nota <= 10.0 {
		return "A"
	} else if nota >= 7.5 && nota < 9.0 {
		return "B"
	} else if nota >= 6.0 && nota < 7.5 {
		return "C"
	} else {
		return "D"
	}
}


